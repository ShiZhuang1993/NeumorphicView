<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backgroundLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- if you do not like basin effect -> remove below polygonView and use only polygonButton -->
    <com.zhuang.neumorphic.custom.PolygonView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:shape_polygon_shadow_type="drop_shadow"
        app:shape_polygon_side="4">

        <com.zhuang.neumorphic.directuse.PolygonButton
            android:id="@+id/polygon_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            app:shape_polygon_side="4">


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="60dp"
                app:srcCompat="@drawable/abc_vector_test"
                app:tint="#000000" />
        </com.zhuang.neumorphic.directuse.PolygonButton>

    </com.zhuang.neumorphic.custom.PolygonView>


</androidx.constraintlayout.widget.ConstraintLayout>